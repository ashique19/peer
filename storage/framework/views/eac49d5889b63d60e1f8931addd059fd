


<?php $__env->startSection('title'); ?> Create new Message <?php $__env->stopSection(); ?>

<?php $__env->startSection('main'); ?>

<h1 class="page-title blue-bg white-text"><center>Messages</center></h1>


<?php if($errors->any()): ?>
<section class="row panel-body">
    <h4>Please check:</h4>
    
    <ul>
        <?php foreach($errors->all() as $error): ?>
        
            <li><?php echo e($error); ?></li>
        
        <?php endforeach; ?>
    </ul>
    <hr>
</section>    
<?php endif; ?>


<section class="col-sm-6 col-sm-offset-3">

<h3>Create Message</h3>


<?php echo Form::open( ['url'=> action('Messages@store'), 'enctype'=>'multipart/form-data' ]); ?>


        <div class="form-group">
            <?php echo Form::label('message_to', 'To: '); ?>

            <?php echo Form::select('message_to', [] , old('message_to') , ['class'=>'form-control user-search', 'placeholder'=>'Receiver of the message']); ?>

        </div>
    
        <div class="form-group">
            <?php echo Form::label('name', 'Subject: '); ?>

            <?php echo Form::text('name', old('name') , ['class'=>'form-control']); ?>

        </div>
            
        <?php echo Form::hidden('message_from', auth()->user()->id); ?>

            
        <div class="form-group">
            <?php echo Form::label('details', 'Details: '); ?>

            <?php echo Form::textarea('details', old('details') , ['class'=>'form-control']); ?>

        </div>
            
    <div class="form-group">
        <?php echo Form::submit('Save Message', ['class'=>'form-control btn btn-info']); ?>

    </div>

<?php echo Form::close(); ?>



</section>

<?php $__env->stopSection(); ?>
        
<?php echo $__env->make('admin.layout', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>